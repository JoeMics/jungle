<tr>
  <td>
    <%= image_tag line.product.image.tiny %>
  </td>
  <td>
    <h4><%= line.product.name %></h4>
    <br>
    <p><%= line.product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol line.product.price %>
  </td>
  <td>
    <%= line.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol line.product.price * line.quantity %>
  </td>
</tr>