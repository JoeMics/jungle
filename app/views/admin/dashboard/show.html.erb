<section>
  <h2>Products: <%= @product_count %></h2>

  <section class="categories">
    <h1>Categories: <%= @category_count %></h2>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item"><%= category.name %></li>
      <% end %>
    </ul>
  </section>

</section>